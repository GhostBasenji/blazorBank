@using Data.DTOs
@using Data.Models
@inject IAccountService AccountService
@inject ICurrencyService CurrencyService
@rendermode InteractiveServer

@if (IsOpen && Account != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title">Top up account @Account.AccountNumber</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Source of funds</label>
                            <select class="form-select" @bind="SelectedAccountId">
                                <option value="">Cash</option>
                                @foreach (var acc in OtherAccounts)
                                {
                                    <option value="@acc.AccountId">@acc.AccountNumber</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="model.Amount" @bind-Value:after="CalculateConvertedAmount" class="form-control" />
                            <ValidationMessage For="@(() => model.Amount)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Currency</label>
                            <select class="form-select" @bind="SelectedCurrencyId" @bind:after="CalculateConvertedAmount">
                                @foreach (var cur in AvailableCurrencies)
                                {
                                    <option value="@cur.CurrencyId">@cur.CurrencyCode - @cur.CurrencyName</option>
                                }
                            </select>
                        </div>

                        @if (Account != null && model.Amount > 0 && ConvertedAmount.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label">Converted amount (@Account.Currency):</label>
                                <div class="fw-bold">@ConvertedAmount.Value.ToString("N2")</div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger py-2">@errorMessage</div>
                        }

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2" disabled="@isLoading">
                                @(isLoading ? "Processing..." : "Top Up")
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public AccountInfoDto? Account { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSuccess { get; set; }

    private AmountDto model = new();
    private bool isLoading;
    private string? errorMessage;

    private List<AccountInfoDto> OtherAccounts = new();
    private List<Currency> AvailableCurrencies = new();
    private int? SelectedAccountId { get; set; }
    private int SelectedCurrencyId { get; set; }
    private decimal? ConvertedAmount { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (!IsOpen || Account == null) return;

        isLoading = false;
        errorMessage = null;
        model.Amount = 0;
        ConvertedAmount = null;

        var all = await AccountService.GetAccountsByClientIdAsync(Account.ClientId);
        OtherAccounts = all.Where(a => a.AccountId != Account.AccountId).ToList();

        AvailableCurrencies = await CurrencyService.GetAllAsync();
        if (AvailableCurrencies.Any())
        {
            SelectedCurrencyId = AvailableCurrencies.First().CurrencyId;
            await CalculateConvertedAmount();
        }
    }

    private async Task CalculateConvertedAmount()
    {
        if (Account == null || model.Amount <= 0 || SelectedCurrencyId == 0) 
        {
            ConvertedAmount = null;
            return;
        }

        try
        {
            var selectedCurrency = AvailableCurrencies.FirstOrDefault(c => c.CurrencyId == SelectedCurrencyId);
            if (selectedCurrency == null) return;

            if (selectedCurrency.CurrencyCode == Account.Currency)
            {
                ConvertedAmount = model.Amount;
            }
            else
            {
                ConvertedAmount = await CurrencyService.ConvertAsync(
                    model.Amount, 
                    selectedCurrency.CurrencyCode, 
                    Account.Currency);
            }
        }
        catch
        {
            ConvertedAmount = null;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (Account == null) return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var selectedCurrency = AvailableCurrencies.FirstOrDefault(c => c.CurrencyId == SelectedCurrencyId);
            if (selectedCurrency == null)
            {
                errorMessage = "Please select a valid currency.";
                return;
            }

            if (SelectedAccountId == null)
            {
                await AccountService.TopUpAccountAsync(Account.AccountId, model.Amount, selectedCurrency.CurrencyCode);
            }
            else
            {
                await AccountService.TransferAsync(
                    fromAccountId: SelectedAccountId.Value,
                    toAccountId: Account.AccountId,
                    amount: model.Amount,
                    currencyCode: selectedCurrency.CurrencyCode);
            }

            await OnSuccess.InvokeAsync();
            await CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CloseModal()
    {
        model.Amount = 0;
        SelectedAccountId = null;
        if (AvailableCurrencies.Any())
        {
            SelectedCurrencyId = AvailableCurrencies.First().CurrencyId;
        }
        errorMessage = null;
        ConvertedAmount = null;
        await OnClose.InvokeAsync();
    }
}