@inherits LayoutComponentBase

<div class="d-flex vh-100 overflow-hidden">
    <nav class="flex-column bg-dark text-white sidebar">
        <h4 class="text-center mb-4">Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <NavLink class="nav-link text-white" href="/currencies" Match="NavLinkMatch.All">
                    Manage Currencies
                </NavLink>
            </li>
            <li class="nav-item mb-2">
                <NavLink class="nav-link text-white" href="/exchange-rates" Match="NavLinkMatch.All">
                    Manage Exchange Rates
                </NavLink>
            </li>
        </ul>
    </nav>

    <div class="flex-grow-1 p-4 bg-light">
        @Body
    </div>
</div>

<style>
    .sidebar {
        width: 200px;
        flex-shrink: 0;
        transition: width 0.3s;
        box-sizing: border-box; 
    }

        .sidebar:hover {
            width: 250px;
        }

        .sidebar .nav-link {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    body, html, .d-flex {
        margin: 0;
        padding: 0;
    }
</style>
